<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    SizeToContent="Height"
    Title="Service Stopper"
    FontSize="40"
    Topmost="True">
    <Grid Margin="10,40,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" Margin="10" TextAlignment="Center" FontFamily="CaskaydiaCove Nerd Font Mono" FontSize="50">
        <TextBlock.Effect>
            <DropShadowEffect Direction="-45" Color="#FFB6C2CB" ShadowDepth="10" BlurRadius="14" />
        </TextBlock.Effect>
        About me
        </TextBlock>
        <Image Grid.Column="1" Source="Media/PSConfEU-Logo.png" HorizontalAlignment="Right" Height="100"/>
        <Image Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" Source="Media/About_Me.png">
             <Image.Effect>
                <DropShadowEffect Direction="-45" Color="#FFB6C2CB" ShadowDepth="10" BlurRadius="14" />
            </Image.Effect>
        </Image>
        <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Margin="20,20,20,20">
            <TextBlock FontSize="35" FontFamily="CaskaydiaCove Nerd Font Mono">@{</TextBlock> 
            <TextBlock FontSize="35" FontFamily="CaskaydiaCove Nerd Font Mono" xml:space="preserve">
                <Run Foreground="Black" Text="    First   = "/><Run Foreground="#FF8B0000" Text="'Bartosz'"/></TextBlock>
            <TextBlock FontSize="35" FontFamily="CaskaydiaCove Nerd Font Mono" xml:space="preserve">
                <Run Foreground="Black" Text="    Last    = "/><Run Foreground="#FF8B0000" Text="'Bielawski'"/></TextBlock>
            <TextBlock FontSize="35" FontFamily="CaskaydiaCove Nerd Font Mono" xml:space="preserve">
                <Run Foreground="Black" Text="    Twitter = "/><Run Foreground="#FF8B0000" Text="'@bielawb'"/></TextBlock>
            <TextBlock FontSize="35" FontFamily="CaskaydiaCove Nerd Font Mono" xml:space="preserve">
                <Run Foreground="Black" Text="    Email   = "/><Run Foreground="#FF8B0000" Text="'bartek.bielawski@live.com'"/></TextBlock>
            <TextBlock FontSize="35" FontFamily="CaskaydiaCove Nerd Font Mono" xml:space="preserve">
                <Run Foreground="Black" Text="    Work    = "/><Run Foreground="#FF8B0000" Text="'Optiver'"/></TextBlock>
            <TextBlock FontSize="35" FontFamily="CaskaydiaCove Nerd Font Mono" xml:space="preserve">
                <Run Foreground="Black" Text="    Git     = "/><Run Foreground="#FF8B0000" Text="'github.com/bielawb'"/></TextBlock>
            <TextBlock FontSize="35" FontFamily="CaskaydiaCove Nerd Font Mono">}</TextBlock>
        </StackPanel>
        <TextBlock Grid.Column="1" Grid.Row="2" FontSize="30" TextAlignment="Left" FontFamily="CaskaydiaCove Nerd Font Mono Italic" Margin="30,30,30,30">
        JEA and gMSA - better together
        </TextBlock>
        <Image Grid.Column="1" Grid.Row="2" Source="Media/Malmo25.png" HorizontalAlignment="Right" Height="100" />
    </Grid>
</Window>